<Window x:Class="LabirintusGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabirintusGUI"
        mc:Ignorable="d"
        Title="Labirintus készítő" Height="450" Width="380">
    <Canvas x:Name="MyLab">
        <Label Content="Labirintus mérete [sor x oszlop]: " Canvas.Left="5" Canvas.Top="15"/>
        <Button x:Name="btnLetrehoz" Content="Induló labirintus létrehozása" Canvas.Left="10" Canvas.Top="50" Width="160" Click="btnLetrehoz_Click"/>
        <Button x:Name="btnMentes" Content="Labirintus mentése" Canvas.Left="185" Canvas.Top="50" Width="110" Click="btnMentes_Click"/>
        <ComboBox x:Name="cbSorokSzama" Canvas.Left="200" Canvas.Top="15" Width="40"/>
        <ComboBox x:Name="cbOszlopokSzama" Canvas.Left="250" Canvas.Top="15" Width="40"/>
        <ComboBox x:Name="cbAllomanyIndexe" Canvas.Left=" 310" Canvas.Top="50" Width="40"/>
    </Canvas>
</Window>
